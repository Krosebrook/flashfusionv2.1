# FlashFusion v2.1 Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Base44 Configuration
# Get these values from your Base44 dashboard at https://base44.com
VITE_BASE44_APP_ID=your_app_id_here
VITE_BASE44_SERVER_URL=https://api.base44.com
VITE_BASE44_TOKEN=your_token_here
VITE_BASE44_FUNCTIONS_VERSION=prod

# Optional: Enable legacy SDK imports (set to 'true' if needed)
BASE44_LEGACY_SDK_IMPORTS=false

# Environment
NODE_ENV=development

# Optional: Analytics and Monitoring
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Optional: Feature Flags
# VITE_ENABLE_ANALYTICS=true
# VITE_ENABLE_BETA_FEATURES=false

# Optional: API Rate Limiting
# VITE_API_RATE_LIMIT=100
# VITE_API_RATE_WINDOW=60000
